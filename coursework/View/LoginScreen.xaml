<Window x:Class="CourseWork.View.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.View" xmlns:components="clr-namespace:CourseWork.Components" xmlns:viewmodel="clr-namespace:CourseWork.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:PackageManage}"
        mc:Ignorable="d"
        Title="Вход в систему" Height="297" Width="300" Background="LightGray"
        Name="LoginScreenWnd">
    <Border  CornerRadius="20" Margin="20,20,20,20" Background="DarkGray">
        <StackPanel Margin="20">
            <Label Content="{Binding LoginLabelContent}"  FontSize="12" HorizontalAlignment="Center" ></Label>
            <Separator/>
            <Label Content="Логин" />
            <TextBox FontSize="18" Text="{Binding LoginTextBoxContent}"   />
            <Label Content="Пароль" />
            <components:BindablePasswordBox  FontSize="18" Password="{Binding PasswordBoxContent, Mode=TwoWay}" />
            <Separator/>
            <Button Content="{Binding LoginOrRegisterButtonContent}"  Command="{Binding RegisterOrLoginCommand}" CommandParameter="{Binding ElementName=LoginScreenWnd}" FontSize="12" />

        </StackPanel>
    </Border>
</Window>
